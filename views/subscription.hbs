{{#ft}}
<form class="w-full max-w-lg" action="/create-trial-subscription" method="POST">
{{/ft}}
{{^ft}}
<form class="w-full max-w-lg" action="/create-subscription" method="POST">
{{/ft}}
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
      <div class="w-full md:w-1/2 px-3 font-bold">
      <img
      src="/img/logo-generic.png"
      width="120"
      height="120"
      />
        <div class="name">Starter</div>
        <div class="price">$15</div>
        <div class="duration">per month</div>
      </div>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit">Checkout Payments Element</button>
    </div>
  </div>
  <input type="hidden" name="priceId" value="{{price}}" />
  <input type="hidden" name="customerId" value="{{customer}}" />
  {{#ft}}
    <input type="hidden" name="freeTrial" value="{{period}}" />
  {{/ft}}
</form>
